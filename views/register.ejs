<%- include('header') %>

<main style="background: var(--bg-light); min-height: 90vh; display: flex; align-items: center; padding: 20px 0;">
    <div class="auth-card">
        <h2>Create account</h2>
        <p>Please enter your details</p>
        
            <form action="/register" method="POST">
                <div class="form-group">
                    <label>Your username</label>
                    <input type="text" name="username" class="modern-input" placeholder="Enter your username" required>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="modern-input" placeholder="Enter your password" required>
                </div>

                <div class="form-group">
                    <label>Repeat password</label>
                    <input type="password" name="confirm_password" class="modern-input" placeholder="Repeat password" required>
                </div>

                <button type="submit" class="btn-gradient">Register</button>
            </form>

        <div style="text-align: center; margin-top: 2rem;">
            <p style="margin-bottom: 1rem; font-weight: 600;">Already have an account?</p>
            <a href="/login" class="btn-outline">Login</a>
        </div>
    </div>
</main>

<%- include('footer') %>
